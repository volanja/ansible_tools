#! /usr/bin/env ruby
# coding: utf-8

require 'ansible_tools'
require 'rubygems'
require 'thor'

class Cli < Thor

  desc "init [-s][-r][-d]", "create ansible files by BestPractice"
  option :simple, :type => :boolean, :aliases => '-s', :desc => "simple-mode, create only setup.yml, roles/common"
  option :role, :type => :string, :aliases => '-r', :desc => "create roles/ROLE"
  option 'dir-only', :type => :boolean, :aliases => '-d', :desc => "create only directory"
  def init
    if options[:simple]
      AnsibleTools.init_simple(options['dir-only'])
    elsif options[:role]
      AnsibleTools.init_role("#{options[:role]}", options['dir-only'])
    else
      AnsibleTools.init(options['dir-only'])
    end
  end

  desc "show", "show ansible valiables in vars/main.yml"
  def show
    AnsibleTools.show
  end

  desc "version", "show version"
  def version
    puts AnsibleTools::VERSION
  end
end

Cli.start

exit 0
